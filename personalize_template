#! /bin/sh

### public key for passwordless login ####
touch /root/.ssh/authorized_keys
cat >> /root/.ssh/authorized_keys << EOF
ssh-dss  dave@peach
EOF

### Custom bash aliases ####
touch /root/aliases 
cat >> /root/aliases << EOF

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias v=vim

alias pyser='python -m SimpleHTTPServer'
EOF

### Custom vim settings ####
touch /root/myVimrc
cat >> /root/myVimrc << EOF

set sw=4
set ts=4
set expandtab
set ic
set fileformat=unix
set encoding=utf-8
EOF

mkdir ~/tmp

### git global configuration - uncomment as needed ###
# git config --global user.email "you@yourmail.com"
# git config --global user.name "First Last"             

